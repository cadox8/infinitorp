{
  "compilerOptions": {
    "typeRoots": [
      "../../node_modules/@types",
      "../typings"
    ],
    "types": [
      "@citizenfx/client",
      "@citizenfx/server",
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@typings/*": [
        "../typings/*"
      ]
    },
    "module": "ESNext",
    "target": "ESNext",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "extends": "@tsconfig/recommended/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": [
    "**/node_modules/*"
  ],
  "include": [
    "./**/*.ts"
  ]
}